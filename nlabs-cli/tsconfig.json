{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/Core/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "fs-extra"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
